{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strict": true,
    "paths": {
      "@database/*": ["database/*"],
      "@content/*": ["content/*"],
      "@auth/*": ["auth/*"],
      "@users/*": ["users/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
